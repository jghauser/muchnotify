#!/usr/bin/env python3
import argparse
import os
import sys

parser = argparse.ArgumentParser(
    description="""
            Display desktop notifications for unread mail in notmuch database.
            """
)
parser.set_defaults(print_summary=False)
parser.add_argument(
    "--print-summary",
    dest="print_summary",
    action="store_true",
    help="""
                    Just print the query summary to stdout, without recency
                    tracking.
                    """,
)
args = parser.parse_args()

if args.print_summary:
    from muchnotify import config
    from muchnotify.messages import Messages

    config.load()
    summary = Messages().summary()
    if summary:
        print(summary)
else:
    # Background ourselves for consistent behaviour, because show_notification
    # may or may not block.
    pid = os.fork()
    if pid > 0:
        os._exit(0)

    from muchnotify.notification import show_notification

    show_notification()
